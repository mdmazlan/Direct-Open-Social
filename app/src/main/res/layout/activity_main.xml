<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/click_button_to_direct_open_social_app"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#424242"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/zuck"
            android:layout_marginTop="60dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mark_zuckerberg"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:textColor="#424242"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button_fb_id"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:textColor="#F3F3F3"
            android:paddingStart="12dp"
            android:paddingEnd="30dp"
            android:text="@string/open_with_facebook"
            android:drawableStart="@drawable/ic_baseline_fb"
            android:background="@drawable/gradient_color"
            android:textSize="18sp"
            android:layout_marginTop="110dp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/button_ig_id"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:textAllCaps="false"
            android:textColor="#F3F3F3"
            android:paddingStart="16dp"
            android:paddingEnd="25dp"
            android:text="@string/open_with_instagram"
            android:drawableStart="@drawable/instagram"
            android:background="@drawable/gradient_color"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_gravity="center" />
    </LinearLayout>

</ScrollView>